<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SemesterProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Lab 3: Creating Custom Themes -->
    <style name="Theme.Custom.Primary" parent="Theme.SemesterProject">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/custom_theme_primary</item>
        <item name="colorPrimaryVariant">@color/custom_theme_primary_variant</item>
        <item name="colorOnPrimary">@color/custom_theme_on_primary</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/custom_theme_secondary</item>
        <item name="colorSecondaryVariant">@color/custom_theme_secondary_variant</item>
        <item name="colorOnSecondary">@color/custom_theme_on_secondary</item>
        <!-- Text Theming-->
        <item name="android:textColor">@color/custom_theme_on_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
        <!-- Other -->
        <item name="android:statusBarColor">@color/custom_theme_primary_variant</item>
    </style>

    <style name="Theme.Custom.Primary.NoActionBar" parent="Theme.Custom.Primary">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true </item>
    </style>
</resources>